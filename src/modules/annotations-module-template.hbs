<div>
    <div>
        <input type="checkbox" id="{{activeCheckboxId}}"/>
        <label for="{{activeCheckboxId}}">Annotation mode</label>
    </div>
    <div id="controls">
        <div id="drawControl">
            <fieldset>
                <legend>Draw method</legend>
                <label>
                    <span><img src="{{imagesPrefix}}pencil.svg" style="width:16px;height:16px;"></span>
                    <input type="radio" name="draw-method" id="draw">
                </label>
                <label>
                    <span><img src="{{imagesPrefix}}rectangle.svg" style="width:16px;height:16px;"></span>
                    <input type="radio" name="draw-method" id="rectangle">
                </label>
                <label>
                    <span><img src="{{imagesPrefix}}circle.svg" style="width:16px;height:16px;"></span>
                    <input type="radio" name="draw-method" id="circle">
                </label>
            </fieldset>
        </div>

        <input type="color" id="colorpicker" value="#000000"/>
<!--         <input type="number" id="lineWidth" value="1"/> -->
       
